---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const { title, description, isTop = false } = Astro.props;
---

<html lang="ja">
	<head>
		<BaseHead title={title} description={description} />
	</head>
	<body>
		<Header isTop={isTop} />
		<main class="container">
			<article>
				<slot />
			</article>
		</main>
		<Footer />
		<script is:inline src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
		<script is:inline src="/js/lib.js"></script>
		<script is:inline src="/js/common.js"></script>
	</body>
</html>